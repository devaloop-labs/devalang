# Event system example
bpm 120

let mySynth = synth sine {
    attack: 0.01,
    decay: 0.1,
    sustain: 0.7,
    release: 0.2
}

# Define event handlers
on beat
    print "â™ª Beat tick"

on bar
    print "â–Œ Bar complete"

on section_change
    print "ðŸŽµ Section changed"

# Main composition
print "Starting with events"

emit section_change

mySynth -> chord(C4)
    -> velocity(0.8)
    -> duration(500)

sleep 1000

emit section_change

mySynth -> chord(E4)
    -> velocity(0.8)
    -> duration(500)

sleep 1000

emit section_change

mySynth -> chord(G4)
    -> velocity(0.8)
    -> duration(500)

sleep 1000

print "Events demonstration complete"
